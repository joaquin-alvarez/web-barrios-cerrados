<style>
  .page-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 20px;
  }

  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(102, 114, 70, 0.2);
  }

  .page-header h1 {
    color: var(--color-primary);
    font-size: 2rem;
  }

  .content-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  .concurso-card {
    display: grid;
    grid-template-columns: 1fr 2fr;
    background-color: #f9f9f9;
    border-radius: 8px;
    overflow: hidden;
    transition: transform 0.3s;
  }

  .concurso-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .concurso-image {
    height: 100%;
    min-height: 200px;
    background-color: var(--color-secondary);
    background-image: linear-gradient(45deg, var(--color-primary), var(--color-secondary));
  }

  .concurso-content {
    padding: 2rem;
  }

  .concurso-content h2 {
    color: var(--color-primary);
    margin-bottom: 0.5rem;
  }

  .concurso-date {
    font-style: italic;
    color: var(--color-secondary);
    margin-bottom: 1rem;
  }

  .concurso-content p {
    margin-bottom: 1.5rem;
  }

  .btn {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background-color: var(--color-primary);
    color: white;
    border-radius: 4px;
    font-weight: bold;
    transition: background-color 0.3s;
  }

  .btn:hover {
    background-color: var(--color-secondary);
  }

  @media (max-width: 768px) {
    .concurso-card {
      grid-template-columns: 1fr;
    }
    
    .concurso-image {
      min-height: 150px;
    }
  }
</style>
