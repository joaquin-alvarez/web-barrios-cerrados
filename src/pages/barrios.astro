---
import MainLayout from '../layouts/MainLayout.astro';
import Navigation from '../components/Navigation.astro';
import Footer from '../components/Footer.astro';
---

<MainLayout title="Barrios - Centro de Proyectos y Gestión">
  <!-- <Navigation /> -->
  <main class="page-container">
    <section class="page-header">
      <h1>Barrios</h1>
    </section>
    <section class="page-content">
      <div class="content-container">
        <div class="section-card">
          <h2>Administración</h2>
          <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
          <a href={`${import.meta.env.BASE_URL}/administracion`} class="btn">Ver más</a>
        </div>
        <div class="section-card">
          <h2>Desarrolladores</h2>
          <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
          <a href={`${import.meta.env.BASE_URL}/desarrolladores`} class="btn">Ver más</a>
        </div>
        <div class="section-card">
          <h2>Publicación</h2>
          <p>Lorem ipsum dolor sit amet, consectetuer adipiscing elit, sed diam nonummy nibh euismod tincidunt ut laoreet dolore magna aliquam erat volutpat.</p>
          <a href={`${import.meta.env.BASE_URL}/publicacion`} class="btn">Ver más</a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</MainLayout>

<style>
  .page-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 2rem 20px;
  }

  .page-header {
    margin-bottom: 2rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid rgba(102, 114, 70, 0.2);
  }

  .page-header h1 {
    color: var(--color-primary);
    font-size: 2rem;
  }

  .content-container {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .section-card {
    background-color: #f9f9f9;
    padding: 2rem;
    border-radius: 8px;
    transition: transform 0.3s;
  }

  .section-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.1);
  }

  .section-card h2 {
    color: var(--color-primary);
    margin-bottom: 1rem;
  }

  .section-card p {
    margin-bottom: 1.5rem;
  }

  .btn {
    display: inline-block;
    padding: 0.5rem 1.5rem;
    background-color: var(--color-primary);
    color: white;
    border-radius: 4px;
    font-weight: bold;
    transition: background-color 0.3s;
  }

  .btn:hover {
    background-color: var(--color-secondary);
  }
</style>
