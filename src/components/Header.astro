---
const bgImageUrl = `${import.meta.env.BASE_URL}/background.png`;
---

<header class="hero" style={`--bg-image-url: url(${bgImageUrl})`}>
  <div class="hero-content">
    <div class="logo">
      <img src={`${import.meta.env.BASE_URL}/logo.svg`} alt="Centro de Proyectos y Gestión" />
    </div>
    <h1>
      <span class="small-heading">CENTRO DE</span>
      <span class="main-heading">Proyectos y Gestión</span>
      <span class="location">ESCOBAR</span>
    </h1>
    <p class="tagline">
      Articulamos proyectos entre lo social,<br />
      lo privado y lo público
    </p>
    <div class="scroll-indicator">
      <a href="#content">
        <img src={`${import.meta.env.BASE_URL}/arrow_down.svg`} alt="Scroll down" />
      </a>
    </div>
  </div>
</header>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    background-image: linear-gradient(rgba(102, 114, 70, 0.7), rgba(102, 114, 70, 0.7)), 
                var(--bg-image-url);
    background-repeat: no-repeat;
    background-position: center center;
    background-size: cover;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    -webkit-mask: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M0,0 H100 V85 Q95,95 50,100 Q5,95 0,85 Z" /></svg>') no-repeat;
    -webkit-mask-size: cover;
    mask: url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100"><path d="M0,0 H100 V85 Q95,95 50,100 Q5,95 0,85 Z" /></svg>') no-repeat;
    mask-size: cover;
  }

  .hero-content {
    max-width: 800px;
  }

  .logo {
    margin-bottom: 5vh;
  }
  
  .logo img {
    width: 80px;
  }

  .small-heading {
    color: var(--color-white);
    display: block;
    font-size: clamp(22px, 3vw, 26px);
    font-weight: normal;
    letter-spacing: 2px;
    text-align: start;
  }

  .main-heading {
    color: var(--color-white);
    display: block;
    font-size: clamp(44px, 8vw, 66px);
    font-weight: bold;
    line-height: 1.1;
    margin: 0 0 10px 0;
    text-align: start;
  }

  .location {
    display: block;
    font-size: clamp(18px, 2.5vw, 22px);
    font-weight: normal;
    padding: 2px 8px;
    background: rgba(255, 255, 255, 0.8);
    color: var(--color-dark);
    border-radius: 4px;
    text-align: end;
    width: fit-content;
    margin-left: auto;
  }

  .tagline {
    margin-top: 10vh;
    font-weight: bold;
    font-size: clamp(22px, 3vw, 26px);
    line-height: 1.5;
  }

  .scroll-indicator {
    width: 40px;
    height: auto;
    position: absolute;
    bottom: 10vh;
    left: 50%;
    transform: translateX(-50%);
    animation: bounce 2s infinite;
    background-color: rgba(255, 255, 255, 0.3);
    border-radius: 50%;
    padding: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .scroll-indicator:hover {
    background-color: rgba(255, 255, 255, 0.5);
    transform: translateX(-50%) scale(1.1);
  }

  .scroll-indicator a {
    color: white;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translate(-50%, 0);
    }
    40% {
      transform: translate(-50%, -20px);
    }
    60% {
      transform: translate(-50%, -10px);
    }
  }

  @media (max-width: 768px) {
    .main-heading {
      font-size: 2.5rem;
    }
    
    .scroll-indicator {
      width: 50px;
      bottom: 8vh;
    }

    .small-heading {
      font-size: 1rem;
    }
    
    .tagline {
      font-size: 1rem;
    }
  }
</style>
