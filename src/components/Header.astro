---
const bgImageUrl = `${import.meta.env.BASE_URL}/background_lg.png`;
const bgImageUrlMask = `${import.meta.env.BASE_URL}/background_lg.svg`;
const bgImageUrlXs = `${import.meta.env.BASE_URL}/background_xs.png`;
const bgImageUrlXsMask = `${import.meta.env.BASE_URL}/background_xs.svg`;
---

<div class="hero-container">
  <div class="hero" style={`--bg-image-url: url(${bgImageUrl}); --bg-image-xs: url(${bgImageUrlXs})`}></div>
  <div class="hero-mask" style={`--bg-image-mask: url(${bgImageUrlMask})`}></div>
  <div class="hero-mask-xs" style={`--bg-image-xs-mask: url(${bgImageUrlXsMask})`}></div>
  <div class="hero-content">
    <div class="logo">
      <img src={`${import.meta.env.BASE_URL}/logo.svg`} alt="Centro de Proyectos y Gestión" />
    </div>
    <h1>
      <span class="small-heading">CENTRO DE</span>
      <span class="main-heading">Proyectos y Gestión</span>
      <span class="location">ESCOBAR</span>
    </h1>
    <p class="tagline">
      Un puente entre lo público,<br>lo privado y lo social.
    </p>
    <div class="scroll-indicator">
      <a href="#content">
        <img src={`${import.meta.env.BASE_URL}/arrow_down.svg`} alt="Scroll down" />
      </a>
    </div>
  </div>
</div>

<style>
  .hero-container {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    color: white;
    overflow: hidden;
  }

  .hero, .hero-mask, .hero-mask-xs {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-repeat: no-repeat;
    background-position: center bottom;
    background-size: cover;
  }

  .hero {
    z-index: 1;
    background-image: var(--bg-image-xs);
  }
  
  @media (min-width: 768px) {
    .hero {
      background-image: var(--bg-image-url);
    }
  }

  .hero-mask {
    z-index: 2;
    background-image: var(--bg-image-mask);
    display: none;
  }

  .hero-mask-xs {
    z-index: 2;
    background-image: var(--bg-image-xs-mask);
    display: block;
  }

  @media (min-width: 768px) {
    .hero-mask {
      display: block;
    }
    .hero-mask-xs {
      display: none;
    }
  }

  .hero-content {
    position: relative;
    z-index: 3;
    max-width: 800px;
  }

  .logo {
    margin-bottom: 5vh;
  }
  
  .logo img {
    width: 80px;
  }

  .small-heading {
    color: var(--color-white);
    display: block;
    font-size: clamp(22px, 3vw, 26px);
    font-weight: normal;
    letter-spacing: 2px;
    text-align: start;
  }

  .main-heading {
    color: var(--color-white);
    display: block;
    font-size: clamp(44px, 8vw, 66px);
    font-weight: bold;
    line-height: 1.1;
    margin: 0 0 10px 0;
    text-align: start;
  }

  .location {
    display: block;
    font-size: clamp(18px, 2.5vw, 22px);
    font-weight: normal;
    padding: 2px 8px;
    background: rgba(255, 255, 255, 0.8);
    color: var(--color-dark);
    border-radius: 4px;
    text-align: end;
    width: fit-content;
    margin-left: auto;
  }

  .tagline {
    margin-top: 10vh;
    font-weight: bold;
    font-size: clamp(22px, 3vw, 26px);
    line-height: 1.5;
  }

  .scroll-indicator {
    position: absolute;
    bottom: -50px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 50%;
  }

  .scroll-indicator img {
    width: 32px;
    height: 32px;
    animation: bounce 2s infinite;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .scroll-indicator:hover {
    background-color: rgba(255, 255, 255, 0.2);
  }
  
  .scroll-indicator:hover img {
    transform: translateY(5px);
  }

  .scroll-indicator a {
    color: white;
  }

  @keyframes bounce {
    0%, 20%, 50%, 80%, 100% {
      transform: translateY(0);
    }
    40% {
      transform: translateY(-10px);
    }
    60% {
      transform: translateY(-5px);
    }
  }

  @media (max-width: 768px) {
    .hero-content {
      padding: 0 5%;
    }

    .main-heading {
      font-size: 2.5rem;
    }
    
    .scroll-indicator {
      bottom: -50px;
    }

    .small-heading {
      font-size: 1rem;
    }
    
    .tagline {
      font-size: 1rem;
    }
  }
</style>
