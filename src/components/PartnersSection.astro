---
import { barrios } from '../data/barrios.js';
---

<section class="section partners-section">
  <div class="section-container">
    <h2 class="section-title">Barrios Cerrados de Escobar</h2>
    <div class="logos-grid">
      {barrios.map((barrio) => (
        <div class="logo-item" data-barrio-id={barrio.id}>
          <div class="logo-circle" title={barrio.nombre}>
            <svg class="placeholder-logo" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
              <path d="M50 0 L100 50 L50 100 L0 50 Z" fill="var(--color-primary-light)" stroke="var(--color-primary)" stroke-width="2"/>
              <text x="50" y="55" font-size="10" text-anchor="middle" fill="var(--color-primary)">{barrio.nombre.substring(0, 1)}</text>
            </svg>
            <span class="barrio-name">{barrio.nombre}</span>
          </div>
        </div>
      ))}
    </div>

    <div class="solutions-section">
      <div class="solution-card">
        <img src="/btnSol1Click-web-barrios.svg" alt="Soluciones en un Click" />
      </div>
      <div class="solution-card">
        <img src="/btnFlora-web-barrios.svg" alt="Flora" />
      </div>
    </div>
  </div>
</section>

<!-- Modal Popup for Barrio Information -->
<div id="barrioModal" class="modal">
  <div class="modal-content">
    <span class="close-modal">&times;</span>
    <div id="modal-content-container">
      <h2 id="barrio-title"></h2>
      <div class="barrio-info-grid">
        <div id="barrio-details"></div>
        <div id="barrio-map">
          <div class="map-placeholder">
            <a id="map-link" href="#" target="_blank" rel="noopener noreferrer">
              <svg viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
                <path d="M12 2C8.13 2 5 5.13 5 9c0 5.25 7 13 7 13s7-7.75 7-13c0-3.87-3.13-7-7-7zm0 9.5c-1.38 0-2.5-1.12-2.5-2.5s1.12-2.5 2.5-2.5 2.5 1.12 2.5 2.5-1.12 2.5-2.5 2.5z" fill="var(--color-primary)"/>
              </svg>
              <span>Ver en Google Maps</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  import { barrios } from '../data/barrios.js';

  // DOM Elements
  const modal = document.getElementById('barrioModal') as HTMLElement;
  const closeModal = document.querySelector('.close-modal') as HTMLElement;
  const modalTitle = document.getElementById('barrio-title') as HTMLElement;
  const modalDetails = document.getElementById('barrio-details') as HTMLElement;
  const mapLink = document.getElementById('map-link') as HTMLElement;

  // Event Listeners
  document.querySelectorAll('.logo-item').forEach(item => {
    item.addEventListener('click', () => {
      const barrioId = parseInt(item.dataset.barrioId);
      showBarrioDetails(barrioId);
    });
  });

  closeModal.addEventListener('click', () => {
    modal.style.display = 'none';
  });

  window.addEventListener('click', (event) => {
    if (event.target === modal) {
      modal.style.display = 'none';
    }
  });

  // Functions
  function showBarrioDetails(id: number) {
    const barrio = barrios.find(b => b.id === id);
    if (!barrio) return;

    // Set modal title
    modalTitle.textContent = barrio.nombre;

    // Generate HTML content for barrio details
    let detailsHTML = `
      <div class="detail-section">
        <h3>InformaciÃ³n General</h3>
        <ul>
          ${barrio.localidad ? `<li><strong>Localidad:</strong> ${barrio.localidad}</li>` : ''}
          ${barrio.direccion ? `<li><strong>DirecciÃ³n:</strong> ${barrio.direccion}</li>` : ''}
          ${barrio.lotes ? `<li><strong>Cantidad de lotes:</strong> ${barrio.lotes}</li>` : ''}
          ${barrio.estado ? `<li><strong>Estado:</strong> ${barrio.estado}</li>` : ''}
        </ul>
      </div>
    `;

    // Add contact information if available
    if (barrio.telefono || barrio.email || barrio.web) {
      detailsHTML += `
        <div class="detail-section">
          <h3>Contacto</h3>
          <ul>
            ${barrio.telefono ? `<li><strong>TelÃ©fono:</strong> ${barrio.telefono}</li>` : ''}
            ${barrio.email ? `<li><strong>Email:</strong> <a href="mailto:${barrio.email}">${barrio.email}</a></li>` : ''}
            ${barrio.web ? `<li><strong>Web:</strong> <a href="${barrio.web.startsWith('http') ? barrio.web : 'https://' + barrio.web}" target="_blank">${barrio.web}</a></li>` : ''}
          </ul>
        </div>
      `;
    }

    // Add amenities if available
    if (barrio.actividades?.length > 0) {
      detailsHTML += `
        <div class="detail-section">
          <h3>Actividades</h3>
          <ul class="tags-list">
            ${barrio.actividades.map(act => `<li class="tag">${act}</li>`).join('')}
          </ul>
        </div>
      `;
    }

    if (barrio.servicios?.length > 0) {
      detailsHTML += `
        <div class="detail-section">
          <h3>Servicios</h3>
          <ul class="tags-list">
            ${barrio.servicios.map(serv => `<li class="tag">${serv}</li>`).join('')}
          </ul>
        </div>
      `;
    }

    if (barrio.eventos) {
      detailsHTML += `
        <div class="detail-section">
          <p><i class="event-icon">ðŸ“…</i> Este barrio organiza eventos comunitarios</p>
        </div>
      `;
    }

    // Set modal content
    modalDetails.innerHTML = detailsHTML;

    // Set map link
    if (barrio.geolocalizacion) {
      mapLink.href = barrio.geolocalizacion;
    } else {
      mapLink.href = `https://www.google.com/maps/search/${encodeURIComponent(barrio.nombre + ' ' + barrio.direccion)}`;
    }

    // Show modal
    modal.style.display = 'block';
  }
</script>

<style>
  .section-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }
  
  .partners-section {
    background-color: #f9f9f9;
    padding: 3rem 0;
  }

  .section-title {
    text-align: center;
    color: var(--color-primary);
    margin-bottom: 2rem;
    font-size: 2rem;
  }

  .logos-grid {
    display: grid;
    grid-template-columns: repeat(6, 1fr);
    gap: 1.5rem;
    margin-bottom: 3rem;
  }

  .logo-item {
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .logo-circle {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    border: 2px solid var(--color-primary);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    color: var(--color-primary);
    font-weight: bold;
    transition: all 0.3s;
    position: relative;
    overflow: hidden;
  }

  .logo-circle:hover {
    cursor: pointer;
    background-color: var(--color-primary-light);
    transform: translateY(-5px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .placeholder-logo {
    width: 50px;
    height: 50px;
    margin-bottom: 5px;
  }

  .barrio-name {
    font-size: 0.75rem;
    text-align: center;
    max-width: 100px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0 5px;
  }

  .solutions-section {
    display: flex;
    justify-content: space-between;
    gap: 2rem;
    flex-wrap: wrap;
    margin-top: 2rem;
  }

  .solution-card {
    width: 20vw;
    transition: transform 0.3s;
  }

  .solution-card:hover {
    cursor: pointer;
    transform: translateY(-5px);
  }

  .solution-card img {
    width: 100%;
    height: auto;
    object-fit: contain;
  }

  /* Modal Styles */
  .modal {
    display: none;
    position: fixed;
    z-index: 1000;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    overflow: auto;
    background-color: rgba(0, 0, 0, 0.7);
  }

  .modal-content {
    background-color: white;
    margin: 5% auto;
    padding: 25px;
    border-radius: 10px;
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    width: 80%;
    max-width: 900px;
    position: relative;
    animation: modalopen 0.4s;
  }

  @keyframes modalopen {
    from { opacity: 0; transform: translateY(-30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .close-modal {
    position: absolute;
    top: 15px;
    right: 20px;
    color: var(--color-primary);
    font-size: 28px;
    font-weight: bold;
    cursor: pointer;
  }

  .close-modal:hover {
    color: black;
  }

  #barrio-title {
    color: var(--color-primary);
    border-bottom: 2px solid var(--color-primary-light);
    padding-bottom: 10px;
    margin-bottom: 20px;
  }

  .barrio-info-grid {
    display: grid;
    grid-template-columns: 60% 40%;
    gap: 20px;
  }

  .detail-section {
    margin-bottom: 20px;
  }

  .detail-section h3 {
    color: var(--color-primary);
    margin-bottom: 10px;
    font-size: 1.2rem;
  }

  .detail-section ul {
    list-style: none;
    padding-left: 5px;
  }

  .detail-section li {
    margin-bottom: 8px;
  }

  .tags-list {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .tag {
    background-color: var(--color-primary-light);
    color: var(--color-primary);
    padding: 5px 10px;
    border-radius: 20px;
    font-size: 0.9rem;
  }

  .map-placeholder {
    height: 200px;
    background-color: #f1f1f1;
    border-radius: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  #map-link {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-decoration: none;
    color: var(--color-primary);
  }

  #map-link svg {
    width: 40px;
    height: 40px;
    margin-bottom: 10px;
  }

  .event-icon {
    margin-right: 10px;
  }

  @media (max-width: 1200px) {
    .logos-grid {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  @media (max-width: 900px) {
    .barrio-info-grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 768px) {
    .logos-grid {
      grid-template-columns: repeat(3, 1fr);
    }

    .modal-content {
      width: 90%;
      padding: 15px;
    }
  }

  @media (max-width: 480px) {
    .logos-grid {
      grid-template-columns: repeat(2, 1fr);
    }

    .logo-circle {
      width: 100px;
      height: 100px;
      font-size: 0.8rem;
    }

    .barrio-name {
      font-size: 0.7rem;
    }
  }
</style>
