              </svg>
              <span>Ver en Google Maps</span>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
  import { barrios } from '../data/barrios.js';

  // DOM Elements
  const modal = document.getElementById('barrioModal') as HTMLElement;
  const closeModal = document.querySelector('.close-modal') as HTMLElement;
  const modalTitle = document.getElementById('barrio-title') as HTMLElement;
  const modalDetails = document.getElementById('barrio-details') as HTMLElement;
  const mapLink = document.getElementById('map-link') as HTMLAnchorElement;

  // Event Listeners
  document.querySelectorAll('.logo-item').forEach(item => {
    item.addEventListener('click', () => {
      const barrioId = parseInt((item as HTMLElement).dataset.barrioId as string);
      showBarrioDetails(barrioId);
    });
  });

  function closeModalWithAnimation() {
    modal.classList.remove('active', 'fade-in');
    modal.classList.add('fade-out');
    
    setTimeout(() => {
      modal.style.display = 'none';
      // Ensure clean state for next opening
      modal.classList.remove('fade-out');
    }, 300); // Match transition duration in CSS
  }

  closeModal.addEventListener('click', closeModalWithAnimation);

  window.addEventListener('click', (event) => {
    if (event.target === modal) {
      closeModalWithAnimation();
    }
  });
  
  // Add keyboard accessibility - close on ESC key
  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape' && modal.style.display === 'block') {
      closeModalWithAnimation();
    }
  });

  // Functions
  function showBarrioDetails(id: number) {
    const barrio = barrios.find(b => b.id === id);
    if (!barrio) return;

    // Set modal title
    modalTitle.textContent = barrio.nombre;

    // Generate HTML content for barrio details
    let detailsHTML = `
      <div class="detail-section">
        <h3>Información General</h3>
        <ul>
          ${barrio.localidad ? `<li><strong>Localidad:</strong> ${barrio.localidad}</li>` : ''}
          ${barrio.direccion ? `<li><strong>Dirección:</strong> ${barrio.direccion}</li>` : ''}
          ${barrio.lotes ? `<li><strong>Cantidad de lotes:</strong> ${barrio.lotes}</li>` : ''}
          ${barrio.estado ? `<li><strong>Estado:</strong> ${barrio.estado}</li>` : ''}
        </ul>
      </div>
    `;

    // Add contact information if available
    if (barrio.telefono || barrio.email || barrio.web) {
      detailsHTML += `
        <div class="detail-section">
          <h3>Contacto</h3>
          <ul>
            ${barrio.telefono ? `<li><strong>Teléfono:</strong> ${barrio.telefono}</li>` : ''}
            ${barrio.email ? `<li><strong>Email:</strong> <a href="mailto:${barrio.email}">${barrio.email}</a></li>` : ''}
            ${barrio.web ? `<li><strong>Web:</strong> <a href="${barrio.web.startsWith('http') ? barrio.web : 'https://' + barrio.web}" target="_blank" rel="noopener noreferrer">${barrio.web}</a></li>` : ''}
          </ul>
        </div>
      `;
    }

    // Add amenities if available
    if (barrio.actividades?.length > 0) {
      detailsHTML += `
        <div class="detail-section">
          <h3>Actividades</h3>
          <ul class="tags-list">
            ${barrio.actividades.map(act => `<li class="tag">${act}</li>`).join('')}
          </ul>
        </div>
      `;
    }

    if (barrio.servicios?.length > 0) {
      detailsHTML += `
        <div class="detail-section">
          <h3>Servicios</h3>
          <ul class="tags-list">
            ${barrio.servicios.map(serv => `<li class="tag">${serv}</li>`).join('')}
          </ul>
        </div>
      `;
    }

    if (barrio.eventos) {
      detailsHTML += `
        <div class="detail-section">
          <p><i class="event-icon">📅</i> Este barrio organiza eventos comunitarios</p>
        </div>
      `;
    }

    // Set modal content
    modalDetails.innerHTML = detailsHTML;

    // Set map link
    if (barrio.geolocalizacion) {
      mapLink.href = barrio.geolocalizacion;
    } else {
      mapLink.href = `https://www.google.com/maps/search/${encodeURIComponent(barrio.nombre + ' ' + (barrio.direccion || ''))}`;  
    }

    // Show modal with animation
    modal.style.display = 'block';
    
    // Force reflow to ensure CSS transitions work properly
    void modal.offsetWidth;
    
    // Add classes to trigger animations
    requestAnimationFrame(() => {
      modal.classList.add('active', 'fade-in');
      modal.classList.remove('fade-out');
    });
  }
</script>

<style>
  .partners-section {
    position: relative;
    padding: var(--spacing-xxl) 0;
    background-color: var(--color-light);
    overflow: hidden;
  }

  .partners-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, 
      var(--color-primary-light), 
      var(--color-primary), 
      var(--color-secondary), 
      var(--color-primary), 
      var(--color-primary-light));
    opacity: 0.7;
    z-index: 1;
  }

  .section-header {
    text-align: center;
    margin-bottom: var(--spacing-xl);
  }

  .section-title {
    color: var(--color-primary-dark);
    font-size: var(--font-size-xxl);
    margin-bottom: var(--spacing-sm);
    text-transform: uppercase;
    letter-spacing: 1px;
    font-weight: 700;
  }

  .section-subtitle {
    color: var(--text-secondary);
    font-size: var(--font-size-lg);
    max-width: 700px;
    margin: 0 auto var(--spacing-md) auto;
    font-weight: 300;
  }

  .section-divider {
    display: flex;
    align-items: center;
    justify-content: center;
    margin: var(--spacing-md) 0;
  }

  .divider-line {
    height: 2px;
    width: 100px;
    background-color: var(--color-secondary);
  }

  .divider-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    margin: 0 var(--spacing-sm);
  }

  .divider-icon svg path {
    fill: var(--color-primary);
    stroke: var(--color-primary);
  }

  .section-footer {
    text-align: center;
    margin-top: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .section-note {
    font-size: var(--font-size-sm);
    color: var(--text-light);
    font-style: italic;
  }

  .logos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(220px, 1fr));
    gap: var(--spacing-xl);
    margin: var(--spacing-lg) 0;
    justify-items: center;
  }

  .logo-item {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 100%;
    max-width: 220px;
    opacity: 0; /* Start invisible for animation */
    animation: fadeIn 0.8s ease-out forwards;
    animation-delay: calc(var(--i, 0) * 0.1s);
  }

  .barrio-card {
    position: relative;
    width: 100%;
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    background-color: var(--color-white);
    box-shadow: var(--shadow-sm);
    overflow: hidden;
    transition: all var(--transition-medium) cubic-bezier(0.25, 0.46, 0.45, 0.94);
    cursor: pointer;
    z-index: 1;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    border-left: 4px solid var(--color-primary);
  }

  .barrio-card .barrio-name {
    position: static;
    color: var(--text-primary);
    font-size: var(--font-size-md);
    font-weight: 600;
    text-align: center;
    transition: transform var(--transition-medium) ease;
    padding: 0;
    bottom: auto;
  }

  .barrio-card:hover {
    transform: translateY(-5px);
    box-shadow: var(--shadow-md);
  }

  .barrio-card:hover .barrio-name {
    transform: translateY(-100%);
    opacity: 0;
  }

  .barrio-card:hover .barrio-hover-info {
    opacity: 1;
    transform: translateY(0);
  }

  .barrio-hover-info {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    background-color: var(--color-primary);
    color: var(--color-white);
    opacity: 0;
    transform: translateY(100%);
    transition: all var(--transition-medium) ease;
    z-index: 1;
  }

  .view-details {
    font-size: var(--font-size-sm);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    padding: var(--spacing-xs) var(--spacing-sm);
    border: 1px solid rgba(255, 255, 255, 0.5);
    border-radius: var(--radius-sm);
  }

  .status-badge {
    position: absolute;
    top: -5px;
    right: -5px;
    background-color: var(--color-primary-light);
    color: white;
    font-size: var(--font-size-xs);
    padding: 3px 8px;
    border-radius: 20px;
    z-index: 10;
    box-shadow: var(--shadow-sm);
    white-space: nowrap;
  }

  @media (max-width: 768px) {
    .barrio-card {
      height: 70px;
      padding: var(--spacing-sm);
    }
  }

  @media (max-width: 480px) {
    .barrio-card {
      height: 60px;
      font-size: 0.8rem;
    }
  }

  .solutions-section {
    margin-top: var(--spacing-xxl);
    padding-top: var(--spacing-xl);
    border-top: 1px solid var(--color-gray-light);
  }

  .solutions-title {
    text-align: center;
    color: var(--color-primary);
    margin-bottom: var(--spacing-xl);
    font-size: var(--font-size-xl);
  }

  .solutions-container {
    display: flex;
    justify-content: space-evenly;
    flex-wrap: wrap;
    gap: var(--spacing-xl);
  }

  .solution-card {
    position: relative;
    width: 20vw;
    min-width: 300px;
    height: auto;
    overflow: visible;
    transition: transform var(--transition-medium) ease, box-shadow var(--transition-medium) ease;
    background-color: #f8f8f8;
  }

  .solution-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: visible;
  }

  .solution-card img {
    background-color: #f8f8f8;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform var(--transition-medium) ease;
  }

  .solution-overlay {
    position: absolute;
    bottom: 0;
    border-radius: var(--radius-lg);
    left: 0;
    width: 100%;
    padding: var(--spacing-md);
    background: linear-gradient(transparent, rgba(0, 0, 0, 0.7));
    transform: translateY(100%);
    transition: transform var(--transition-medium) ease;
  }

  .solution-overlay h4 {
    margin-bottom: var(--spacing-xs);
